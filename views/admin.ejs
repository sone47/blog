<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <title>Admin</title>
  <script type="text/javascript" src="./javascripts/Sone.js"></script>
  <script type="text/javascript" src="./javascripts/sone_drag.js"></script>
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/admin.css">
  <link rel="shortcut icon" href="images/head/head0.png" />
  <link href="images/head/head1.png" sizes="114x114" rel="apple-touch-icon-precomposed">
</head>
<body>
  <!-- 头部 -->
  <header id="header">
    <div class="header">
      <!-- 导航 -->
      <a class="nav-btn">
        <span></span>
        <span></span>
        <span></span>
      </a>
      <nav class="nav" id="nav">
        <ul class="nav-content">
          <li class="nav-li"><a href="/">Home</a></li>
          <li class="nav-li"><a href="/article">Blogs</a></li>
          <li class="nav-li"><a href="/project">Demos</a></li>
          <li class="nav-li"><a href="/about">About me</a></li>
        </ul>
      </nav>
      <h1 class="logo">Sone</h1>
    </div>
  </header>

  <main id="main">
    <% if(login) { %>
      <% var title = '您已登录' %>
    <% } else { %>
      <% var title = '管理员登录' %>
    <% } %>
    <h1 class="title"><%= title %></h1>
    <form class="loginForm">
      <% if(!login) { %>
        <div>
          <input type="text" placeholder="管理员账户" class="admin">
        </div>
        <div>
          <input type="password" placeholder="密码" class="password">
        </div>
        <input type="submit" value="登录" class="login">
      <% } else { %>
        <input type="submit" value="退出登录" class="logout">
      <% } %>
    </form>
  </main>

  <!-- 分享侧栏 -->
  <div id="share">
    <h2>分享到</h2>
    <ul>
      <li><a href="javascript:void(0);" class="mshare">一键分享</a></li>
      <li><a href="javascript:void(0);" class="qzone">QQ空间</a></li>
      <li><a href="javascript:void(0);" class="weibo">新浪微博</a></li>
      <li><a href="javascript:void(0);" class="tieba">百度贴吧</a></li>
      <li><a href="javascript:void(0);" class="douban">豆瓣网</a></li>
      <li><a href="javascript:void(0);" class="weixin">微信</a></li>
      <li><a href="javascript:void(0);" class="instagram">Instagram</a></li>
      <li><a href="javascript:void(0);" class="facebook">Facebook</a></li>
      <li><a href="javascript:void(0);" class="twitter">Twitter</a></li>
    </ul>
    <div><a href="javascript:void(0);" class="more">更多...</a></div>
    <span>分享</span>
  </div>

  <script type="text/javascript" src="./javascripts/base.js"></script>
  <script type="text/javascript" src="./javascripts/admin.js"></script>
</body>
</html>